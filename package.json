{
	"name": "monorepo-mocha",
	"displayName": "Mocha - Monorepo",
	"description": "Run mocha unit tests in a monorepo layout",
	"version": "1.1.2",
	"publisher": "GeekAdonis",
	"author": {
		"name": "Stephen"
	},
	"icons": "images/icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://delaneys73.visualstudio.com/_git/monorepo-mocha"
	},
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Testing"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
	"main": "./out/extension.js",
	"capabilities": {
		"codeLensProvider": {
			"resolveProvider": "true"
		},
		"commands": [
			{
				"command": "monorepo-mocha.debug.test",
				"title": "Debug Test"
			},
			{
				"command": "monorepo-mocha.run.test",
				"title": "Run Test"
			}
		],
		"configuration": [
			{
				"properties": {
					"monorepo-mocha.defaultArguments": {
						"default": "--require ts-node/register",
						"description": "CLI args to pass to test runner.",
						"scope": "resource",
						"type": "string"
					},
					"monorepo-mocha.extensions": {
						"default": [
							".test.ts"
						],
						"description": "Extensions of files that contain mocha tests.",
						"items": {
							"type": "string"
						},
						"scope": "resource",
						"type": "array"
					},
					"monorepo-mocha.testRoots": {
						"default": [],
						"description": "The root paths of the monorepo to run tests in.",
						"items": {
							"type": "object"
						},
						"scope": "resource",
						"type": "array"
					},
					"monorepo-mocha.trackResultsInline": {
						"default": "true",
						"description": "Use in-built test explorer to track results, if false will be done in terminal",
						"type": "boolean",
						"scope": "resource"
					},
					"monorepo-mocha.pathToMocha": {
						"description": "Full path to mocha executable (Defaults to node_modules if not set).",
						"scope": "resource",
						"type": "string"
					}
				}
			}
		]
	},
	"contributes": {
		"configuration": {
			"title": "Monorepo Mocha",
			"properties": {
				"monorepo-mocha.defaultArguments": {
					"default": "--require ts-node/register",
					"description": "CLI args to pass to test runner.",
					"type": "string"
				},
				"monorepo-mocha.extensions": {
					"default": [
						".test.ts"
					],
					"description": "Extensions of files that contain mocha tests.",
					"items": {
						"type": "string"
					},
					"type": "array"
				},
				"monorepo-mocha.testRoots": {
					"default": [],
					"description": "The root paths of the monorepo to run tests in.",
					"items": {
						"type": "object"
					},
					"type": "array"
				},
				"monorepo-mocha.trackResultsInline": {
					"default": true,
					"description": "Use in-built test explorer to track results, if false will be done in terminal",
					"type": "boolean"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@babel/parser": "7.17.3",
		"@babel/traverse": "7.17.3",
		"@babel/types": "7.17.0",
		"fast-xml-parser": "^4.0.6",
		"mocha": "^9.2.1",
		"uuid": "^8.3.2",
		"vscode-test-adapter-api": "^1.9.0",
		"yarn": "^1.22.22"
	},
	"devDependencies": {
		"@types/babel__traverse": "7.14.2",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/uuid": "^8.3.4",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"@vscode/vsce": "^2.26.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"typescript": "^4.5.5"
	}
}
